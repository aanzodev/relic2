{
	"compilerOptions": {
		"outDir": "dist",
		"sourceMap": true,
		"target": "ES2022",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"strict": true,
		"stripInternal": true,
		"module": "ES6",
		"moduleResolution": "Bundler",
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"noImplicitAny": false
	},
	"include": ["src"]
}
